<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/CB_SELECTION"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp" />

    <com.example.pgyl.pekislib_a.CustomImageButton
        android:id="@+id/BTN_MODE_RUN"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/main_chrono" />

    <com.example.pgyl.pekislib_a.CustomImageButton
        android:id="@+id/BTN_SPLIT"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/main_split" />

    <com.example.pgyl.pekislib_a.CustomImageButton
        android:id="@+id/BTN_CLOCK_APP_ALARM"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/main_bell" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LT_TIME_MESSAGE"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TV_TIME"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/mainlistitembacksel"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textColor="@color/mainlistitemtextsel"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TV_MESSAGE"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/mainlistitembacksel"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textColor="@color/mainlistitemtextsel"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>